<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="@Url.Content("~/Image/favicon.ico")" />
    <title>MLhuillier Inc. Global Client</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body style="background: url('../Image/Sinulog2.jpg') no-repeat fixed #1f0f0f; background-size: cover;">    
    <header>
        <nav id="HeaderMenu" class="" style="text-align: center; color: #AAA; line-height: 50px;">Home | Sendout | Payout | Reports | KP2Go | BillsPayment | System</nav>
    </header>

    <div id="content-holder" class=""
         style="width: 100%; margin: auto;">
        @RenderBody()
    </div>

    <footer>
        <nav id="FooterUserInfo" class="" style="color: #AAA;">
            <span id="MLFSI" class="fadeOn">
                &copy; @DateTime.Now.Year MLhuillier Financial Services, Inc. Philippines. All Rights Reserved.
            </span>
            <span id="UserInfo" class="fadeOn">
            </span>
        </nav>
    </footer>    
    
    <div id="ajxload" class="ajxLoadOn"
         style="background-color: rgba(0,0,0,0.6); height: 100%; width: 100%; position: absolute; top: 0px;">
        <div id="ajaxified-svg-image" style="position: relative; width: 52px; height: 52px; top: 50%; left: 50%; transform: translate(-50%, -50%);">
            <img id="MLLogo-Diamond" src="~/Image/_MLAjaxLoad.svg" draggable="false" />
            <img id="MLLogo-Ajax-Circle" src="~/Image/_CircleAjaxLoad.svg" draggable="false" />
        </div>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>